<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="@dimen/_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/time_start_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="14dp"
                android:text="@string/time_start_label"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_end_Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/time_start_Txt"
                android:layout_alignStart="@+id/time_start_Txt"
                android:layout_below="@+id/time_start_Txt"
                android:layout_marginTop="12dp"
                android:text="@string/time_end_label"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/scheduler_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/time_start_Txt"
                android:layout_marginEnd="34dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>