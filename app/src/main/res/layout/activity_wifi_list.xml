<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/wifi_setting"
        android:layout_width="@dimen/_18sp"
        android:layout_height="@dimen/_18sp"
        android:src="@drawable/ic_settings_black_48dp"
        android:layout_gravity="center" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/wifi_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/wifi_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/wifi_location"
            android:layout_below="@+id/wifi_location"
            android:layout_marginStart="18dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center">
        <Button
            android:id="@+id/wifi_action_btn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:elevation="2dp"
            android:text="@string/btn_label_connect" />
    </RelativeLayout>
</LinearLayout>