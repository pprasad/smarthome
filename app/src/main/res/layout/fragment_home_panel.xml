<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/device_datetime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/cardview_dark_background"
            android:text="@string/device_system_datetime"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/split_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2dp"
            android:layout_below="@+id/device_datetime"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@color/colorLoginwin" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/device_information"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15dp"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideInset"></android.support.v7.widget.RecyclerView>
    </RelativeLayout>
</LinearLayout>